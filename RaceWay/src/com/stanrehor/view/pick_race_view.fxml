<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane onMouseMoved="#onActionPickRace" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stanrehor.controller.PickRaceController">
   <children>
      <ComboBox fx:id="pickRaceCombo" layoutX="125.0" layoutY="108.0" onMouseClicked="#onActionFillComboBox" prefWidth="150.0" promptText="Pick your race track" />
      <Label layoutX="53.0" layoutY="6.0" prefHeight="55.0" prefWidth="400.0" text="Pick the race you would like to play." AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <font>
            <Font name="Calibri" size="24.0" />
         </font>
         <padding>
            <Insets left="3.0" />
         </padding>
      </Label>
      <Button fx:id="createBtn" layoutX="54.0" layoutY="204.0" mnemonicParsing="false" onAction="#onActionCreateNewV" text="Create new vehicle" visible="false" />
      <Button fx:id="loadBtn" layoutX="212.0" layoutY="204.0" mnemonicParsing="false" onAction="#onActionLoadV" text="Load an existing vehicle" visible="false" />
   </children>
</AnchorPane>
